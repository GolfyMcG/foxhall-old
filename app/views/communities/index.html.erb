<h1>Listing communities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address Line 1</th>
      <th>Address Line 2</th>
      <th>Address City</th>
      <th>Address State</th>
      <th>Address Zipcode</th>
    </tr>
  </thead>

  <tbody>
    <% @communities.each do |community| %>
      <tr>
        <td><%= community.name %></td>
        <td><%= community.description %></td>
        <td><%= community.address.line_1 %></td>
        <td><%= community.address.line_2 %></td>
        <td><%= community.address.city %></td>
        <td><%= community.address.state %></td>
        <td><%= community.address.zipcode %></td>
        <td><%= link_to 'Show', community %></td>
        <td><%= link_to 'Edit', edit_community_path(community) %></td>
        <td><%= link_to 'Destroy', community, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

