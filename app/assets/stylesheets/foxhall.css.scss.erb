/*=============================== */
/*=== 1. Variable Declaration === */
/*=============================== */
* {
    margin: 0;
    padding: 0;
}
/*=== 1.1 Colors === */
$primaryColor1: #A4451A; //burnt orange
$primaryColor2: #126F4C; //green
$primaryColor3: #D28F71; //tan-orange
$lightColor: darken(#FFFFFF, 5); //off-white
$darkColor: lighten(#000000, 15); //off-black

/*=== 1.2 Fonts === */
@font-face  {
    font-family: 'SerifFont1';
    src:url('<%= asset_path 'Bodoni-Normal.ttf' %>') format('truetype');
    font-weight: normal;
    font-style: normal;
}

@font-face  {
    font-family: 'SerifFont1';
    src:url('<%= asset_path 'Bodoni-Bold.ttf' %>') format('truetype');
    font-weight: bold;
    font-style: normal;
}

@font-face  {
    font-family: 'SerifFont1';
    src:url('<%= asset_path 'Bodoni-Italic.ttf' %>') format('truetype');
    font-weight: normal;
    font-style: italic;
}

@font-face  {
    font-family: 'SerifFont1';
    src:url('<%= asset_path 'Bodoni-Bold-Italic.ttf' %>') format('truetype');
    font-weight: bold;
    font-style: italic;
}

@font-face  {
    font-family: 'SansFont1';
    src:url('<%= asset_path 'Helvetica-Normal.ttf' %>') format('truetype');
    font-weight: normal;
    font-style: normal;
}

@font-face  {
    font-family: 'SansFont1';
    src:url('<%= asset_path 'Helvetica-Italic.ttf' %>') format('truetype');
    font-weight: normal;
    font-style: italic;
}

@font-face  {
    font-family: 'SansFont1';
    src:url('<%= asset_path 'Helvetica-Bold.ttf' %>') format('truetype');
    font-weight: bold;
    font-style: normal;
}

/*=== 1.3 Sizes === */
$wrapperWidth: 1000px;

/*======================== */
/*=== 2. Default Items === */
/*======================== */
/*=== 2.1 Headers Tags === */
h1 {
    color: $darkColor;
    font-family: 'SansFont1', sans-serif;
    line-height: 1.2em;
    font-size: 48px;
    margin: 15px 0 0 0;
}
h2 {
    color: $primaryColor1;
    font-family: 'SerifFont1', serif;
    line-height: 1.2em;
}
h3 {
    color: $darkColor;
    font-family: 'SansFont1', sans-serif;
    font-size: 24px;
    line-height: 1.2em;
    font-weight: normal;
}
h4 {
    color: $primaryColor1;
    font-family: 'SerifFont1', serif;
    line-height: 1.2em;
}
h5 {
    color: $darkColor;
    font-family: 'SerifFont1', serif;
    line-height: 1.2em;
}

/*=== 2.2 Body Tags === */
p {
    color: $darkColor;
    font-family: 'SansFont1', sans-serif;
    line-height: 1.2em;
}

li {
    color: $darkColor;
    font-family: 'SansFont1', sans-serif;
    line-height: 1.2em;
}

/*=== 2.3 Additional Typography === */
a {
    color: $primaryColor2;
    font-family: 'SansFont1', sans-serif;
    line-height: 1.2em;
}
