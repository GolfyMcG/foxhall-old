/*=== 2.6 Property Classes === */
.fixed  {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1;
}

.center {
    text-align: center;
}

.line-break {
  border-bottom: 1px solid $primaryColor3;
  width: 50%;
  display: block;
  margin: 0 auto;
  margin-bottom: 15px;
}

/*================= */
/*=== 3. Layout === */
/*================= */
/*=== 3.1 General === */
html {
    background-color: $primaryColor1;
}
body {
}
.wrapper {
    width: $wrapperWidth;
    margin: 0 auto;
    position: relative;
}
.clear-fix {
    clear: both;
    height: 15px;
}

/*=== 3.2 Header === */
header {
    #hero {
        position: relative;
        top: 0px;
        width: 100%;
        height: 450px;
        background-image: url(<%= asset_path 'home-cover-photo.png' %>);
        background-position: center center;
        background-repeat: no-repeat;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        #logo {
            background-image: url(<%= asset_path 'logo.png' %>);
            background-position: center center;
            background-repeat: no-repeat;
            display: block;
            width: 500px;
            height: 180px;
            position:relative;
            top: 0;
            left: 0;
        }
    }
}
/*=== 3.3 Nav === */
nav {
    background-color: $primaryColor1;
    ul {
        list-style-type: none;
        li {
            display: inline-block;
            width: 19.5%;
            font-size: 20px;
            font-weight: 500;
            color: $lightColor;
            text-align: center;
            -moz-text-shadow: 1px 1px lighten(#000000, 30);
            text-shadow: 1px 1px lighten(#000000, 30);
            cursor: pointer;
            -webkit-transition: background-color 0.2s ease-in-out;
            -moz-transition: background-color 0.2s ease-in-out;
            transition: background-color 0.2s ease-in-out;
            &:hover, &.active {
                background-color: $primaryColor2;
            }
            a {
                width: 100%;
                height: 1.1em;
                padding: 3px 0;
                text-decoration: none;
                display: block;
                color: $lightColor;
            }
        }
    }
}

#nav-placeholder {
    height: 20px;
}

/*=== 3.4 Content === */
#content {
    background-color: $lightColor;
    min-height: 400px;
    display: block;
}
section {
}
article {
}
aside {
}

/*=== 3.5 Footer === */
footer {
    padding: 20px 0;
    background-color: $primaryColor1;
    height: 80px;
    display: block;
    li, p, a {
        color: $lightColor;
    }
    article{
        display: inline-block;
        width: 25%;
        float: left;
        ul {
            list-style-type: none;
            li {
                padding-left: 7px;
                &.title {
                    padding: 0;
                    font-size: 18px;
                }
            }
        }
    }
}

