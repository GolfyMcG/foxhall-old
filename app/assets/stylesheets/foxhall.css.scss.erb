/*=============================== */
/*=== 1. Variable Declaration === */
/*=============================== */
* {
    margin: 0;
    padding: 0;
}
/*=== 1.1 Colors === */
$primaryColor1: #A4451A; //burnt orange
$primaryColor2: #126F4C; //green
$primaryColor3: #D28F71; //tan-orange
$lightColor: darken(#FFFFFF, 5); //off-white
$darkColor: lighten(#000000, 15); //off-black

/*=== 1.2 Fonts === */
@font-face  {
    font-family: 'SerifFont1';
    src:url('<%= asset_path 'Bodoni-Normal.ttf' %>') format('truetype');
    font-weight: normal;
    font-style: normal;
}

@font-face  {
    font-family: 'SerifFont1';
    src:url('<%= asset_path 'Bodoni-Bold.ttf' %>') format('truetype');
    font-weight: bold;
    font-style: normal;
}

@font-face  {
    font-family: 'SerifFont1';
    src:url('<%= asset_path 'Bodoni-Italic.ttf' %>') format('truetype');
    font-weight: normal;
    font-style: italic;
}

@font-face  {
    font-family: 'SerifFont1';
    src:url('<%= asset_path 'Bodoni-Bold-Italic.ttf' %>') format('truetype');
    font-weight: bold;
    font-style: italic;
}

@font-face  {
    font-family: 'SansFont1';
    src:url('<%= asset_path 'Helvetica-Normal.ttf' %>') format('truetype');
    font-weight: normal;
    font-style: normal;
}

@font-face  {
    font-family: 'SansFont1';
    src:url('<%= asset_path 'Helvetica-Italic.ttf' %>') format('truetype');
    font-weight: normal;
    font-style: italic;
}

@font-face  {
    font-family: 'SansFont1';
    src:url('<%= asset_path 'Helvetica-Bold.ttf' %>') format('truetype');
    font-weight: bold;
    font-style: normal;
}

/*=== 1.3 Sizes === */
$wrapperWidth: 1000px;

$homeListContainerWidth: 600px;
$homeListIconRows: 3;
$homeListIconColumns: 3;
$homeListIconPadding: 5px;
$homeListIconBorder: 0px;
$homeListIconWidth: ($homeListContainerWidth)/ $homeListIconColumns - $homeListIconPadding*2 - $homeListIconBorder*2;
$homeListIconHeight: $homeListIconWidth*0.70;
$homeListContainerHeight: ($homeListIconHeight+$homeListIconPadding*2+$homeListIconBorder*2)*$homeListIconRows;

$featureTypeIconMargin: 20px;
$featureTypeIconBorder: 1px;
$featureTypeIconWidth: $wrapperWidth*0.5 - $featureTypeIconMargin*2 - $featureTypeIconBorder*2;

/*======================== */
/*=== 2. Default Items === */
/*======================== */
/*=== 2.1 Headers Tags === */
h1 {
    color: $darkColor;
    font-family: 'SansFont1', sans-serif;
    line-height: 1.2em;
    font-size: 48px;
    margin: 15px 0 0 0;
}
h2 {
    color: $primaryColor1;
    font-family: 'SerifFont1', serif;
    line-height: 1.2em;
}
h3 {
    color: $darkColor;
    font-family: 'SansFont1', sans-serif;
    font-size: 24px;
    line-height: 1.2em;
    font-weight: normal;
}
h4 {
    color: $primaryColor1;
    font-family: 'SerifFont1', serif;
    line-height: 1.2em;
}
h5 {
    color: $darkColor;
    font-family: 'SerifFont1', serif;
    line-height: 1.2em;
}

/*=== 2.2 Body Tags === */
p {
    color: $darkColor;
    font-family: 'SansFont1', sans-serif;
    line-height: 1.2em;
}

li {
    color: $darkColor;
    font-family: 'SansFont1', sans-serif;
    line-height: 1.2em;
}

/*=== 2.3 Additional Typography === */
a {
    color: $primaryColor2;
    font-family: 'SansFont1', sans-serif;
    line-height: 1.2em;
}
/*=== 2.4 Forms === */
form {
}
input {
}

/*=== 2.5 Buttons === */

/*=== 2.6 Property Classes === */
.fixed  {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1;
}

.center {
    text-align: center;
}

.line-break {
    border-bottom: 1px solid $primaryColor3;
    display: inline-block;
    width: 100%;
    margin-bottom: 15px;
}

/*================= */
/*=== 3. Layout === */
/*================= */
/*=== 3.1 General === */
html {
    background-color: $primaryColor1;
}
body {
}
.wrapper {
    width: $wrapperWidth;
    margin: 0 auto;
    position: relative;
}
.clear-fix {
    clear: both;
    height: 15px;
}

/*=== 3.2 Header === */
header {
    #hero {
        position: relative;
        top: 0px;
        width: 100%;
        height: 450px;
        background-image: url(<%= asset_path 'home-cover-photo.png' %>);
        background-position: center center;
        background-repeat: no-repeat;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        #logo {
            background-image: url(<%= asset_path 'logo.png' %>);
            background-position: center center;
            background-repeat: no-repeat;
            display: block;
            width: 500px;
            height: 180px;
            position:relative;
            top: 0;
            left: 0;
        }
    }
}
/*=== 3.3 Nav === */
nav {
    background-color: $primaryColor1;
    ul {
        list-style-type: none;
        li {
            display: inline-block;
            width: 19.5%;
            font-size: 20px;
            font-weight: 500;
            color: $lightColor;
            text-align: center;
            -moz-text-shadow: 1px 1px lighten(#000000, 30);
            text-shadow: 1px 1px lighten(#000000, 30);
            cursor: pointer;
            -webkit-transition: background-color 0.2s ease-in-out;
            -moz-transition: background-color 0.2s ease-in-out;
            transition: background-color 0.2s ease-in-out;
            &:hover, &.active {
                background-color: $primaryColor2;
            }
            a {
                width: 100%;
                height: 1.1em;
                padding: 3px 0;
                text-decoration: none;
                display: block;
                color: $lightColor;
            }
        }
    }
}

#nav-placeholder {
    height: 20px;
}

/*=== 3.4 Content === */
#content {
    background-color: $lightColor;
    min-height: 400px;
    display: block;
}
section {
}
article {
}
aside {
}

/*=== 3.5 Footer === */
.footer-gap {
    display: block;
    height: 40px;
    width: 100%;
}
footer {
    padding: 20px 0;
    background-color: $primaryColor1;
    height: 80px;
    display: block;
    li, p, a {
        color: $lightColor;
    }
    article{
        display: inline-block;
        width: 25%;
        float: left;
        ul {
            list-style-type: none;
            li {
                padding-left: 7px;
                &.title {
                    padding: 0;
                    font-size: 18px;
                }
            }
        }
    }
}

/*=== 3.6 Other Layouts === */
#community-map {
    .infoWindow {
        width: 450px;
        h1 {
          text-align: left;
          margin: 5px 0 0 0;
          font-size: 25px;
          float: left;
        }
        .infoAddress {
            display: block;
            float: right;
            font-weight: bold;
            font-size: 14px;
            margin: 8px 0;
            margin-left: 10px;
        }
        .infoDescription {
            font-size: 14px;
            clear: both;
        }
    }
}

/*==================== */
/*=== 4. Home Page === */
/*==================== */
#page-pages-home {
  #content {
        article {
            header {
                padding-top: 20px;
            }
            &#communities {
                header  {
                    text-align: center;
                }
                #community-map {
                  display: block;
                  width: 80%;
                  height: 400px;
                  margin: 10px auto;
                  background-color: $primaryColor3;
                }
            }
            &#plans {
                #floor-plan-container {
                    height: 410px;
                    margin-top: 20px;
                    .collection-icon {
                        display: block;
                        margin: 15px 0;
                        width: 320px;
                        background-color: #FFFFFF;
                        text-align: right;
                        background-image: url(<%= asset_path 'map_logo.png' %>);
                        background-position: 15px center;
                        background-repeat: no-repeat;
                        border: 1px solid darken($lightColor, 10);
                        border-bottom-width: 2px;
                        -webkit-transition: background-color 0.2s ease-in-out;
                        -moz-transition: background-color 0.2s ease-in-out;
                        transition: background-color 0.2s ease-in-out;
                        float: left;
                        cursor: pointer;
                        &.active-icon {
                            background-color: darken(#FFFFFF, 10);
                        }
                        &:hover {
                            background-color: darken(#FFFFFF, 10);
                        }
                        h3 {
                            padding: 25px 15px 20px 0;
                        }
                    }
                    .home-list {
                        display: none;
                        width: $homeListContainerWidth;
                        float: right;
                        height: $homeListContainerHeight;
                        &.active-list {
                          display: block;
                        }
                        ul {
                            list-style-type: none;
                            a {
                              text-decoration: none;
                              display: inline-block;
                              width: $homeListIconWidth;
                              margin: $homeListIconPadding;
                              height: $homeListIconHeight;
                              border: $homeListIconBorder solid #FFFFFF;
                              float: left;
                              background-image: url(<%= asset_path 'map_logo.png' %>);
                              background-position: center center;
                              background-repeat: no-repeat;
                              li {
                                  text-align: center;
                                  width: 100%;
                                  height: 1em;
                                  visibility: hidden;
                                  opacity: 0;
                                  padding: 4px 0;
                                  background-color: lighten(black, 20);
                                  background-color: rgba(lighten(black, 20), 0.7);
                                  color: white;
                                  -webkit-transition: visibility 0.2s ease-in-out, opacity 0.2s ease-in-out;
                                  -moz-transition: visibility 0.2s ease-in-out, opacity 0.2s ease-in-out;
                                  transition: visibility 0.2s ease-in-out, opacity 0.2s ease-in-out;
                              }
                              &:hover li {
                                  opacity: 1;
                                  visibility: visible;
                              }
                            }
                        }
                    }
                }
            }
            &#features {
                header {
                    text-align: right;
                }
                ul.feature-types {
                    list-style-type:none;
                    a {
                        text-decoration: none;
                        background-image: url(<%= asset_path 'map_logo.png' %>);
                        background-position: center center;
                        background-repeat: no-repeat;
                        display: inline-block;
                        float: left;
                        font-size: 22px;
                        text-align: center;
                        width: $featureTypeIconWidth;
                        height: 1em;
                        padding: 25px 0;
                        margin: 15px $featureTypeIconMargin;
                        border: $featureTypeIconBorder solid darken($lightColor, 10);
                        border-bottom-width: 2px;
                        -webkit-transition: border 0.2s ease-in-out;
                        -moz-transition: border 0.2s ease-in-out;
                        transition: border 0.2s ease-in-out;
                        &:hover {
                            border-color: darken($lightColor, 30);
                        }
                        li {
                            display: inline-block;
                            color: white;
                            height: 1em;
                            padding: 3px 20px;
                            background-color: lighten(black,30);
                            background-color: rgba(lighten(black,30), 0.6);
                        }
                    }
                }
            }
            &#contact {
                header {
                    text-align: center;
                }
                .contact-form {
                    display: block;
                    height: 300px;
                    width: 80%;
                    background-color: $primaryColor3;
                    margin: 0px auto;
                }
            }
        }
    }
}
